<h1>Listing quotes</h1>

<table>
  <tr>
    <th>Votes count</th>
    <th>Quote</th>
    <th>Comment</th>
    <th>Approved</th>
    <th>Reported</th>
  </tr>

<% for quote in @quotes %>
  <tr>
    <td><%=h quote.votes_count %></td>
    <td><%=h quote.quote %></td>
    <td><%=h quote.comment %></td>
    <td><%=h quote.approved %></td>
    <td><%=h quote.reported %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New quote', new_quote_path %>
